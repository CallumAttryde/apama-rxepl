package com.industry.rx_epl;

event IDisposable {
	action<> onDispose;
	
	action dispose() {
		if not disposed() {
			action<> dispose := onDispose;
			onDispose := new action<>;
			dispose();
		}
	}
	
	action disposed() returns boolean {
		ifpresent onDispose {
			return false;
		} else {
			return true;
		}
	}
}